+setprop('/armament/ghost-refuel/signal', '0');
+setprop('/armament/ghost-refuel/amount', '0.95');
+
+var ghost_refuel = func(){
+	var target_amount = getprop('/armament/ghost-refuel/amount');
+
+	#Refuel speed in gal-us/second.
+	var refuel_speed = 10;
+	var refuel_tanks = 0;
+
+	if (!getprop('/armament/ghost-refuel/signal')
+		or getprop('/consumables/fuel/total-fuel-norm') >= target_amount) {
+		screen.log.write('Refuel Complete!!!', 0, 1, 0);
+		setprop('/armament/ghost-refuel/signal', '0');
+		return;
+	}
+
+	for (var i = 0; i < 8; i += 1) {
+		var amount = getprop('/consumables/fuel/tank[' ~ i ~ ']/level-gal_us');
+		var capacity = getprop('/consumables/fuel/tank[' ~ i ~ ']/capacity-gal_us');
+		if (amount < capacity - 0.1) {
+			refuel_tanks += 1;
+		}
+	}
+
+	for (var i = 0; i < 8; i += 1) {
+		var amount = getprop('/consumables/fuel/tank[' ~ i ~ ']/level-gal_us');
+		var capacity = getprop('/consumables/fuel/tank[' ~ i ~ ']/capacity-gal_us');
+		amount = amount + (refuel_speed / refuel_tanks);
+		if (amount >= capacity) {
+			amount = capacity;
+		}
+		setprop('/consumables/fuel/tank[' ~ i ~ ']/level-gal_us', amount);
+	}
+
+	settimer(ghost_refuel, 1);
+}
+
+setlistener('/armament/ghost-refuel/signal', func{
+	if (getprop('/armament/ghost-refuel/signal')){
+		ghost_refuel();
+	}
+});
