diff -ruN B-2/Nasal/magic_refuel.nas /home/frank/.fgdata/Aircraft/B-2/Nasal/magic_refuel.nas
--- B-2/Nasal/magic_refuel.nas	1970-01-01 08:00:00.000000000 +0800
+++ /home/frank/.fgdata/Aircraft/B-2/Nasal/magic_refuel.nas	2015-06-20 14:08:12.326412882 +0800
@@ -0,0 +1,62 @@
+setprop('/command/magic-refuel/signal', 0);
+setprop('/command/magic-refuel/amount', '0.97');
+
+var magic_refuel = func(){
+	var target_amount = getprop('/command/magic-refuel/amount');
+
+	#Refuel speed in gal-us/second.
+	var refuel_speed = 27;
+	var refuel_tanks = 0;
+
+	if (!getprop('/command/magic-refuel/signal')
+		or getprop('/consumables/fuel/total-fuel-norm') >= target_amount) {
+		screen.log.write('Refuel Complete!!!', 0, 1, 0);
+		setprop('/command/magic-refuel/signal', '0');
+		return;
+	}
+
+	for (var i = 0; i < 6; i += 1) {
+		var amount = getprop('/consumables/fuel/tank[' ~ i ~ ']/level-gal_us');
+		var capacity = getprop('/consumables/fuel/tank[' ~ i ~ ']/capacity-gal_us');
+		if (amount < capacity - 0.1) {
+			refuel_tanks += 1;
+		}
+	}
+
+	for (var i = 0; i < 6; i += 1) {
+		var amount = getprop('/consumables/fuel/tank[' ~ i ~ ']/level-gal_us');
+		var capacity = getprop('/consumables/fuel/tank[' ~ i ~ ']/capacity-gal_us');
+		amount = amount + (refuel_speed / refuel_tanks);
+		if (amount >= capacity) {
+			amount = capacity;
+		}
+		setprop('/consumables/fuel/tank[' ~ i ~ ']/level-gal_us', amount);
+		if (!getprop('/consumables/fuel/tank[' ~ i ~ ']/selected')) {
+			setprop('/consumables/fuel/tank[' ~ i ~ ']/selected', 1);
+		}
+	}
+
+	settimer(magic_refuel, 1);
+}
+setlistener('/command/magic-refuel/signal', func{
+	if (getprop('/command/magic-refuel/signal')){
+		magic_refuel();
+	}
+});
+
+setlistener('/autopilot/route-manager/wp/id', func {
+	if (getprop('/autopilot/route-manager/active'))
+	{
+		fuel_norm_now = getprop('/consumables/fuel/total-fuel-norm');
+		fuel_norm_target = getprop('/command/magic-refuel/amount');
+		wp_info = split('-', getprop('/autopilot/route-manager/wp/id'));
+		if (size(wp_info) > 1
+			and 'REFUEL' == wp_info[1]
+			and fuel_norm_now < fuel_norm_target
+			and !getprop('/command/magic-refuel/signal'))
+		{
+			setprop('/command/magic-refuel/signal', 1);
+		}
+	}
+});
+
