+++ B-1B/Nasal/magic_refuel.nas	2015-02-01 17:44:30.686903343 +0800
@@ -0,0 +1,80 @@
+setprop('/armament/magic-refuel/signal', 0);
+setprop('/armament/magic-refuel/amount', '0.95');
+setprop('/armament/magic-refuel/daemon', 0);
+setprop('/armament/magic-refuel/refuel-points', 'LANDO:0.95');
+
+var magic_refuel = func(){
+	var target_amount = getprop('/armament/magic-refuel/amount');
+
+	#Refuel speed in gal-us/second.
+	var refuel_speed = 27;
+	var refuel_tanks = 0;
+
+	if (!getprop('/armament/magic-refuel/signal')
+		or getprop('/consumables/fuel/total-fuel-norm') >= target_amount) {
+		screen.log.write('Refuel Complete!!!', 0, 1, 0);
+		setprop('/armament/magic-refuel/signal', '0');
+		return;
+	}
+
+	for (var i = 0; i < 8; i += 1) {
+		var amount = getprop('/consumables/fuel/tank[' ~ i ~ ']/level-gal_us');
+		var capacity = getprop('/consumables/fuel/tank[' ~ i ~ ']/capacity-gal_us');
+		if (amount < capacity - 0.1) {
+			refuel_tanks += 1;
+		}
+	}
+
+	for (var i = 0; i < 8; i += 1) {
+		var amount = getprop('/consumables/fuel/tank[' ~ i ~ ']/level-gal_us');
+		var capacity = getprop('/consumables/fuel/tank[' ~ i ~ ']/capacity-gal_us');
+		amount = amount + (refuel_speed / refuel_tanks);
+		if (amount >= capacity) {
+			amount = capacity;
+		}
+		setprop('/consumables/fuel/tank[' ~ i ~ ']/level-gal_us', amount);
+		if (!getprop('/consumables/fuel/tank[' ~ i ~ ']/selected')) {
+			setprop('/consumables/fuel/tank[' ~ i ~ ']/selected', 1);
+		}
+	}
+
+	settimer(magic_refuel, 1);
+}
+setlistener('/armament/magic-refuel/signal', func{
+	if (getprop('/armament/magic-refuel/signal')){
+		magic_refuel();
+	}
+});
+
+var magic_refuel_daemon = func {
+	if (!getprop('/armament/magic-refuel/daemon')) {
+		return;
+	}
+
+	if (!getprop('/autopilot/route-manager/active')) {
+		setprop('/armament/magic-refuel/daemon', 0);
+		screen.log.write('Sorry, you haven\'t activated your route yet.', 1, 0, 0);
+		return;
+	}
+		
+	wp_cur = getprop('/autopilot/route-manager/wp/id');
+	records_all = split(",", getprop('/armament/magic-refuel/refuel-points'));
+	foreach(var record; records_all) {
+		wp = split(':', record)[0];
+		amount = split(':', record)[1];
+		if (wp == wp_cur) {
+			setprop('/armament/magic-refuel/amount', amount);
+			if (getprop('/consumables/fuel/total-fuel-norm') < amount
+				and !getprop('/armament/magic-refuel/signal')) {
+				setprop('/armament/magic-refuel/signal', 1);
+			}
+			break;
+		}
+	}
+}
+var magic_refuel_daemon_mainloop = func() {
+	magic_refuel_daemon();
+	settimer(magic_refuel_daemon_mainloop, 1);
+}
+magic_refuel_daemon_mainloop();
+
